{% extends 'base.html.twig' %}

{% block title %}Tenant{% endblock %}

{% block body %}
    <h1>Tenant</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ tenant.id }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ tenant.color }}</td>
            </tr>
            <tr>
                <th>Civility</th>
                <td>{{ tenant.civility }}</td>
            </tr>
            <tr>
                <th>DateOfBirth</th>
                <td>{{ tenant.dateOfBirth ? tenant.dateOfBirth|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PlaceOfBirth</th>
                <td>{{ tenant.placeOfBirth }}</td>
            </tr>
            <tr>
                <th>Nationality</th>
                <td>{{ tenant.nationality }}</td>
            </tr>
            <tr>
                <th>Profession</th>
                <td>{{ tenant.profession }}</td>
            </tr>
            <tr>
                <th>MonthlyIncome</th>
                <td>{{ tenant.monthlyIncome }}</td>
            </tr>
            <tr>
                <th>HasGuarantor</th>
                <td>{{ tenant.hasGuarantor ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>PrivateComment</th>
                <td>{{ tenant.privateComment }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('tenant_index') }}">back to list</a>

    <a href="{{ path('tenant_edit', {'id': tenant.id}) }}">edit</a>

    {{ include('tenant/_delete_form.html.twig') }}
{% endblock %}
